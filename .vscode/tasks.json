    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-node-watch",
      "isBackground": true,
      "dependsOn": "npm install (functions)",
      "options": {
        "cwd": "${workspaceFolder}/packages/functions-aca"
      }
    },
    {
      "type": "shell",
      "label": "npm install (functions)",
      "command": "npm install",
      "options": {
        "cwd": "${workspaceFolder}/packages/functions-aca"
      }
    },
    {
      "type": "shell",
      "label": "npm prune (functions)",
      "command": "npm prune --production",
      "problemMatcher": [],
      "options": {
        "cwd": "${workspaceFolder}/packages/functions-aca"
      }
    },
    {
      "label": "Start Azure Functions (functions-aca)",
      "type": "shell",
      "command": "npx",
      "args": ["func", "start"],
      "isBackground": false,
      "group": "build"
    },
    {
      "label": "Run Playwright focused search test",
      "type": "shell",
      "command": "npm",
      "args": [
