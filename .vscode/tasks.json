        "packages/app/tests/app.spec.js"
      ]
    },
    {
      "label": "Run frontend unit/e2e tests smoke",
      "type": "shell",
      "command": "npm",
      "args": ["run", "test", "--workspaces=false", "--silent"],
      "group": "build"
    },
    {
      "label": "Run app workspace tests",
      "type": "shell",
      "command": "npm",
      "args": ["run", "-w", "packages/app", "test", "--silent"],
      "group": "build"
    }
