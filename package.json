{
    "name": "template-doctor",
    "version": "0.0.1",
    "description": "An Azure template analysis and healing app",
    "main": "bin/cli.js",
    "private": true,
    "workspaces": [
        "packages/*"
    ],
    "bin": {
        "template-doctor": "dist/cli.js"
    },
