{
  "name": "template-doctor-frontend",
  "version": "0.0.1",
  "description": "Template Doctor frontend",
  "scripts": {
    "test": "playwright test",
    "test:headless": "PLAYWRIGHT_HEADLESS=1 playwright test",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "browsers:install": "playwright install chromium",
    "dev": "vite",
    "preview": "vite preview --port 3000 --host",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prebuild": "node scripts/sync-static-files.js",
    "build": "vite build",
    "clean": "rm -rf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "esbuild": "^0.23.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.0"
  }
}
